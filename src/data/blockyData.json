{
  "version": "1.0.0",
  "programName": "condition_demo",
  "actions": [
    {
      "type": "repeatRange",
      "variable": "i",
      "from": 1,
      "to": 4,
      "step": 1,
      "body": [
        { "type": "forward", "count": 1 },
        {
          "type": "if",
          "cond": {
            "type": "condition",
            "function": "isYellow",
            "check": true
          },
          "then": [
            { "type": "collect", "color": "yellow", "count": 3 }
          ]
        }
      ]
    }
  ]
}
